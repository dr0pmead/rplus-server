{
  "Services": {
    "Auth": {
      "Grpc": "http://rplus-kernel-auth:5007",
      "Http": "http://rplus-kernel-auth:5006"
    },
    "Access": {
      "Grpc": "http://rplus-kernel-access:5003"
    },
    "Guard": {
      "Grpc": "http://rplus-kernel-guard:5013"
    }
  },
  "JWT": {
    "Issuer": "RPlus.Auth",
    "Audience": "RPlus.Kernel"
  },
  "Cors": {
    "AllowedOrigins": []
  },
  "Realtime": {
    "Enabled": true,
    "FanoutChannel": "rplus:realtime:events",
    "Kafka": {
      "GroupId": "rplus-realtime-gateway",
      "Topics": [
        "users.qr.issued.v1",
        "integration.otp.issued.v1"
      ]
    },
    "Mappings": {
      "users.qr.issued.v1": {
        "type": "users.qr.updated",
        "category": "invalidation",
        "action": "invalidate",
        "target": "users.qr",
        "version": 1,
        "recipients": {
          "strategy": "AggregateId"
        }
      },
      "integration.otp.issued.v1": {
        "type": "integration.otp.updated",
        "category": "notification",
        "action": "otp_generated",
        "target": "integration.otp",
        "version": 1,
        "recipients": {
          "strategy": "AggregateId"
        }
      }
    }
  },
  "Gateway": {
    "Authorization": {
      "Enabled": true,
      "FailOpenOnAccessUnavailable": false,
      "DecisionCacheSeconds": 1,
      "DefaultApplicationId": "web-admin-ui",
      "AllowedApplicationIds": [
        "web-admin-ui"
      ],
      "TenantIdHeaderName": "X-Tenant-Id",
      "ApplicationIdHeaderName": "X-App-Id"
    },
    "Upstreams": {
      "hr": {
        "BaseAddress": "http://rplus-kernel-hr:5015"
      },
      "loyalty": {
        "BaseAddress": "http://rplus-kernel-loyalty:5012"
      },
      "organization": {
        "BaseAddress": "http://rplus-kernel-organization:5009"
      },
      "integration": {
        "BaseAddress": "http://rplus-kernel-integration:5008"
      },
      "users": {
        "BaseAddress": "http://rplus-kernel-users:5014"
      },
      "wallet": {
        "BaseAddress": "http://rplus-kernel-wallet:5005"
      },
      "guard": {
        "BaseAddress": "http://rplus-kernel-guard:5013"
      },
      "access": {
        "BaseAddress": "http://rplus-kernel-access:5002"
      },
      "documents": {
        "BaseAddress": "http://rplus-kernel-documents:5017"
      },
      "meta": {
        "BaseAddress": "http://rplus-kernel-meta:5018"
      },
      "ai": {
        "BaseAddress": "http://rplus-ai:5020"
      },
      "hunter": {
        "BaseAddress": "http://rplus-hunter:8080"
      }
    }
  }
}